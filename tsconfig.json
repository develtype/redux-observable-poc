{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "custom-type/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
